<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path 'A.jpg' %>');">
  <div class="banner-content">
    <h1>Welcome Home</h1>
    <p>Select the room you want to rent</p>

    <%= simple_form_for :search, url: rooms_path, method: :get, html: {class: "form-inline"} do |f| %>
      <%= f.input :city, placeholder: 'City ?', label: false,input_html: {class: "form-control input-lg"} %>
      <%= f.input :date, as: :date, label: false,input_html: {class: "form-control input-lg"} %>
      <%= f.input :category, label: false,prompt: "Select category", collection: @categories, input_html: {class: "form-control input-lg"}%>

      <p class="home_button"><%= f.button :submit, input_html: {class: "btn btn-primary btn-lg"}%></p>
    <% end %>

  </div>
</div>


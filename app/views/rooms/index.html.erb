
<p id="notice"><%= notice %></p>
<h1>Rooms</h1>
<p>New <%= link_to "#new", rooms_path %></p>
<p> Edit <%= link_to "#edit", rooms_path %> </p>
<p> Show <%= link_to "#show", rooms_path %> </p>


<div class="container">
  <div class="row">
  <div class="form-inline">
        <%= simple_form_for :search, url: rooms_path, method: :get, remote: true do |f| %>
        <%= f.input :address, placeholder: 'Where do you want to go ?', label: false %>
        <%= f.input :date, as: :date, label: false%>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
         </div>
    <div class="col-sm-9">
    <% @rooms.each do |a| %>
      <%= render "room_card", room: a %>
    <% end %>
  </div>
  </div>

<div class="col-sm-3">
  <div id="map" style="width: 100%; height: 300px; margin-top: 10px;"></div>
<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  <% end %>
<% end %>
</div>
</div>

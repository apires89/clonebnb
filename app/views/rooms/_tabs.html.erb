<div class="tabs">
  <%= link_to room_path(@room.id, anchor:  "overview"), class: "tab active" do %>
    <h2>Overview</h2>
  <% end %>
  <%= link_to room_path(@room.id, anchor:  "reviews"), class: "tab" do %>
    <h2>Reviews</h2>
  <% end %>
  <%= link_to room_path(@room.id, anchor:  "map"), class: "tab" do %>
    <h2>Location</h2>
  <% end %>
  <%= link_to room_path(@room.id, anchor:  "host"), class: "tab" do %>
    <h2>The Host</h2>
  <% end %>
</div>

<script>
  $(function(){
    $(".tab").on("click", function(e){
      // Change active tab
      $(".tab").removeClass('active');
      $(this).addClass('active');
    });
  });
</script>

<!-- anchor: directs to a a div with id specified -->
